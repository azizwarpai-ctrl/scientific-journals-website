# Production Environment Configuration
# Copy this file to .env and fill in all values before deploying

# =====================================================
# DATABASE (MySQL/MariaDB) — REQUIRED
# =====================================================
DATABASE_URL="mysql://<user>:<password>@<host>:<port>/scientific_journals_db"
DATABASE_HOST=""
DATABASE_PORT="3306"
DATABASE_NAME="scientific_journals_db"
DATABASE_USER=""
DATABASE_PASSWORD=""

# =====================================================
# AUTHENTICATION — REQUIRED
# =====================================================
JWT_SECRET=""  # Generate with: openssl rand -base64 64

# =====================================================
# APPLICATION — REQUIRED
# =====================================================
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://your-domain.com"

# =====================================================
# OJS SYNC (Optional — only if OJS integration is used)
# =====================================================
# OJS_DATABASE_URL="mysql://<readonly_user>:<password>@<host>:<port>/ojs_db"
# OJS_DATABASE_HOST=""
# OJS_DATABASE_PORT="3306"
# OJS_DATABASE_NAME="ojs_db"
# OJS_DATABASE_USER=""
# OJS_DATABASE_PASSWORD=""
# OJS_SYNC_ENABLED="false"
# OJS_SYNC_INTERVAL_MINUTES="360"

