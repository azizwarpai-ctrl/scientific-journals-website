generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model AdminUser {
  id            String    @id @default(uuid())
  email         String    @unique
  full_name     String
  role          String    @default("admin")
  password_hash String

  @@map("admin_users")
}
